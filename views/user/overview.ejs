<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>SPORTbabble</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/profile.css">


</head>

<body>
    <%- include  ../partials/navbar.ejs %>
    <div class="col-md-12 mob-clearfix margin-80">
      <input type="hidden" id="name-user" value="<%= user.username %>">
      <input type="hidden" id="name-image" value="<%= user.userImage %>">

        <div class="col-md-12">
            <div class="chat_container">
                <div class="row">
                    <!-- LEFT -->

                    <div class="col-sm-4 col-md-3">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="profile-sidebar">
                                        <div class="img-container">
                                            <img src="https://grecmihaiusersbucket.s3.amazonaws.com/<%= data.userImage%>" class="img-responsive img-user" id="show_img">
                                        </div>

                                    <div class="profile-usertitle">
                                        <div class="profile-usertitle-name">
                                            <p style="color:#4aa1f3;"><%= data.username %></p>
                                        </div>

                                    </div>
                                    <% if(user.username === data.username){ %>
                                    <div class="profile-usermenu">
                                        <ul class="nav">
                                            <li class="active">
                                                <a href="#" style="color:#4aa1f3 !important">
                                                    <i class="fa fa-home" style="color:#4aa1f3 !important"></i>
                                                    Overview
                                                </a>
                                            </li>
                                            <li>
                                                <a href="/settings/profile" style="color:#4aa1f3 !important">
                                                    <i class="fa fa-user" style="color:#4aa1f3 !important"></i>
                                                    Profile
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    <% } %>

                                </div>
                            </div>

                        </div>


                    </div>


                    <!--MIDDLE-->
                    <div class="col-sm-8 col-md-9 mob-50">
                      <span id="error"></span>
                      <form method="post">
                      <div>
                      	<div class="user-display">

                      		<h3 class="user-display-head" style="color:#4aa1f3 !important">Favourite Players</h3>
                      		<hr />
                          <% _.forEach(data.favPlayers, function(val){ %>
                      		<p style="margin-bottom:30px; color:#4aa1f3">
                      			<span class="glyphicon glyphicon-check"></span>
                            <%= val.playerName %>
                      		</p>
                          <% })%>
                      	</div>
                        <br><br>
                        <div class="user-display">

                      		<h3 class="user-display-head" style="color:#4aa1f3 !important">Personal data</h3>
                      		<hr />
                      		<p style="margin-bottom:30px; color:#4aa1f3">
                            <i class="fa fa-flag"></i>
                            <%= data.country %>
                      		</p>
                          <p style="margin-bottom:30px; color:#4aa1f3">
                            <i class="fa fa-book"></i>
                            <%= data.mantra %>
                      		</p>
                      	</div>
                      </div>
                      </form>
                    </div>

                </div>

            </div>
        </div>

    </div>

</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/messagelink.js"></script>
<script src="/js/group/sendRequest.js"></script>
<script src="/js/global.js"></script>
<script src="/js/deparam.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/2.3.0/mustache.js"></script>

</html>
